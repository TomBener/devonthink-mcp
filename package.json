		"watch": "tsc --watch",
		"format": "biome format --write .",
		"lint:fix": "biome lint --fix",
		"start": "node dist/index.js",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"format:check": "biome format ."
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.20.1",
